<body style="background-color:lightslategray;">

    <div >
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src=@ViewBag.Picture1 alt="First slide" style=" max-width:100%;">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src=@ViewBag.Picture2 alt="Second slide" style=" max-width:100%;">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src=@ViewBag.Picture3 alt="Third slide" style=" max-width:100%;">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
