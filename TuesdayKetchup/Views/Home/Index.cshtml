@{
    ViewBag.Title = "Home Page";
    
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Gravy Train</title>
    <link rel="stylesheet" media="screen" href="https://fonts.googleapis.com/css?family=Headland+One">

</head>

<body style="background-color:lightslategray;">

    <div >
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src=@ViewBag.Picture1 alt="First slide" style=" max-width:100%;">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src=@ViewBag.Picture2 alt="Second slide" style=" max-width:100%;">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src=@ViewBag.Picture3 alt="Third slide" style=" max-width:100%;">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="container">
        <div style="padding-top:2.5em; padding-bottom:2.5em;">
            @if (ViewBag.Announcement != null)
            {
                <div class="card text-white bg-primary mb-3" style="width:100%; max-height:300px;overflow:auto; border-radius:8px; padding-top:1em;">
                    <div class="card-header">
                        <h4 class="card-title">Announcements</h4>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@ViewBag.Announcement</p>
                    </div>
                </div>
            }
        </div>
    </div>
    <div style="background-color:darkslategrey; padding-top:3em;">
        <div style="background-color:#010000; border-top-left-radius:30px; border-bottom-left-radius:30px; margin-left:2em; margin-bottom:2em;">
            <h1 style=" color:lightslategray;  align-content:center; margin-left:1.5em; font-size:3em; padding-top:2px;">Recent Episodes</h1>
        </div>
        <div class="row" style="align-content:center; margin-right:4em; margin-left:4em;">
            <div class="col-sm-4" style="display:inline-block;">
                <img src=@ViewBag.KetchupLogo style="border-radius:100%; width:95%; display:inline-block;" />
                @if (@ViewBag.TuesdayKetchupEp != null)
                {
                    <h5>
                        <a href="@Url.Action("Ketchup","Home")">@ViewBag.TuesdayKetchupEp</a>
                    </h5>
                }
            </div>
            <div class="col-sm-4" style="display:inline-block;">
                <img src=@ViewBag.NickLogo style="border-radius:100%; width:95%;display:inline-block;" />
                @if (@ViewBag.NickNightEp != null)
                {
                    <h5>
                        <a href="@Url.Action("NickAtNight","Home")">@ViewBag.NickNightEp</a>
                    </h5>
                }
            </div>
            <div class="col-sm-4" style="display:inline-block; padding-right:0;">
                <img src=@ViewBag.KetchupLogo style="border-radius:100%; width:95%; display:inline-block;" />
                @if (@ViewBag.TuesdayKetchupEp != null)
                {
                    <h5>
                        <a href="@Url.Action("Ketchup","Home")">@ViewBag.TuesdayKetchupEp</a>
                    </h5>
                }
            </div>

        </div>
    </div>
   







            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>


</body>


</html>
