@model TuesdayKetchup.Models.Comment

@{
    ViewBag.Title = "Flag Comment";
}

<h3>Are you sure you want to flag this comment?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Message)
        </dt>

        <dd>
            <font color="black">
                @Html.DisplayFor(model => model.Message)
            </font>
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Flag Comment" class="btn btn-default" />
        </div>
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
