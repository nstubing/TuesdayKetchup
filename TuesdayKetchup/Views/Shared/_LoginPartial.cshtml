<style>





    .loginLinks {
        background-color: lightgray;
        color: darkgray;
    }

</style>
@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="list-group">
            <li class="list-group-item list-group-item-dark text-center" style="border-radius:6px;">
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            </ul>
        <center>
            <button type="button" class="btn-light" style="border-radius:6px;"><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></button>
        </center>
            
       
    }
}
else
{
        


            <button type="button" class="btn-outline-light, text-light" style="border-radius:6px;">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</button>

            <button type="button" class="btn-outline-light, text-light" style="border-radius:6px;">@Html.ActionLink("Login", "Login","Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</button>
       
}
