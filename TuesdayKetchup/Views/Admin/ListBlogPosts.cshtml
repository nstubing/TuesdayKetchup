@model IEnumerable<TuesdayKetchup.Models.BlogPost>

@{
    ViewBag.Title = "ListBlogPosts";
}

<h2>ListBlogPosts</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Blog.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Blog.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditBlog", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteBlogPost", new { id=item.Id })
        </td>
    </tr>
}

</table>
