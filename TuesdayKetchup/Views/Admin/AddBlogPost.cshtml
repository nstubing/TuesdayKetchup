
@{
    ViewBag.Title = "AddBlogPost";
}

@using (Html.BeginForm("AddBlogPost", "Admin", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Add Blog Post</h4>
        <hr />
        <div class="form-group">
            Title
            <dv class="col-md-10">
                @Html.TextArea("Title", new { htmlAttributes = new { @class = "form-control" } })
            </dv>
        </div>
        <div class="form-group">
            Blog Post
            <div class="col-md-10">
                <div style="width:100%; max-width:100%;">
                    @Html.TextArea("Message", null, 30, 300, new { @style = "width:100%;max-width:100%;" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="editor-label">
                Image
            </div>
            <div class="editor-field">
                <input id="Image" title="Upload an image"
                       type="file" name="file" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Post" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
