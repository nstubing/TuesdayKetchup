@model TuesdayKetchup.Models.Thread

@{
    ViewBag.Title = "Details";
}

<div>
    <h4>Thread</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

    </dl>
</div>
@foreach (var item in (ViewBag.Posts as List<TuesdayKetchup.Models.Post>))
{
<div>
    <div>
        @Html.DisplayFor(modelItem => item.UserName)
    </div>
    <div>
        <font color="black">
            @Html.DisplayFor(modelItem => item.Message)
        </font>
    </div>
    <font color="red">
        @if (ViewBag.ActiveUserId == item.UserId)
        {
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) @: | 
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        }
        @if (ViewBag.ActiveUserId != item.UserId && ViewBag.ActiveUserId != null)
        {
            @Html.ActionLink("Flag Post", "FlagPost", new { id = item.Id })
        }
    </font>
    <hr />
</div>
}
<font color="red">

    @Html.ActionLink("Add Post", "CreatePost", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</font>
