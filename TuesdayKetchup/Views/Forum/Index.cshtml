@model IEnumerable<TuesdayKetchup.Models.Thread>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/secondLayout.cshtml";
}

@if (User.IsInRole("Fan") || User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New Thread", "Create")
    </p>
}
@if (ViewBag.Message != null)
{
    <h5>@ViewBag.Messages</h5>
}
<table class="table">
    <tr>
        <th>
            Thread
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <font color="black">
                    @Html.DisplayFor(modelItem => item.Title)
                </font>
            </td>
            <td>
                @Html.ActionLink("View Thread", "Details", new { id = item.Id })
                @if (User.IsInRole("Admin") || item.UserId == ViewBag.CurrentUserId)
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                }
            </td>
        </tr>
    }

</table>
